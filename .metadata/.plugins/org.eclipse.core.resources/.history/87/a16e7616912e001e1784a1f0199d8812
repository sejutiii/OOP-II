package collectionLab;

import java.util.Arrays;

public class UsingArrays {
	
	private int intArray[]= {1,2,3,4,5,6,7,8};
	private double doubleArray[]= {1.4, 6.7, 9.8, 3.56, 4.03, 8.14};
	
	private int filledIntArray[], intArrayCopy[];
	
	public UsingArrays()
	{
		filledIntArray= new int[9];
		intArrayCopy= new int[intArray.length];
		Arrays.fill(intArrayCopy, 7);
		
		Arrays.fill(filledIntArray, 5);
		Arrays.sort(doubleArray);
					
		System.arraycopy(intArray, 0, intArrayCopy, 2, 3);
	}
	
	public void printArrays()
	{
		System.out.println("DoubleArray: ");
		for(double dubVal: doubleArray)
		{
			System.out.print(dubVal + " ");
		}
		
		System.out.println("\nintArray: ");
		for(int intval: intArray)
		{
			System.out.print(intval + " ");
		}
		
		
		
		System.out.println("\nfilledIntArray: ");
		for(int intval: filledIntArray)
		{
			System.out.print(intval + " ");
		}
		
		System.out.println("\nintArrayCopy: ");
		for(int intval: intArrayCopy)
		{
			System.out.print(intval + " ");
		}
		
		System.out.println("\n");
	}
	
	public int searchForInt(int val)
	{
		return Arrays.binarySearch(intArray, val);
	}
	
	
	public void printEquality()
	{
		boolean b= Arrays.equals(intArray, intArrayCopy);
		
		if(b== true) System.out.println("Equal");
		else System.out.println("Not equal");
	}
	
	
	
}
